<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_header_profile"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Profile Picture"
            android:elevation="3dp"
            android:src="@drawable/icon_profile_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo, "
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Side Profile -->
    <LinearLayout
        android:id="@+id/sideProfileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_side_profile"
        android:elevation="3dp"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="5dp"
            android:contentDescription="Profile Picture"
            android:src="@drawable/icon_jabatan" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:text="Dokter Umum"
            android:textSize="14sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:gravity="end"
            android:text="Poliklinik: Umum"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Jadwal Kerja -->
    <LinearLayout
        android:id="@+id/jadwalKerja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/bg_list_menu"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@id/sideProfileLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Kerja"
            android:fontFamily="@font/inter"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hari"
                android:fontFamily="@font/inter"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tvWaktu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:gravity="right"
                android:text="Senin - Sabtu"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Waktu"
                android:fontFamily="@font/inter"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:gravity="left"/>

            <TextView
                android:id="@+id/tvTotalHadir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:gravity="right"
                android:text="09.00 - 13.00"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTotalTidakHadir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/inter"
                android:gravity="right"
                android:text="18.00 - 21.00"
                android:textSize="14sp" />
        </LinearLayout>


        <!-- Garis Pembatas -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginVertical="10dp"/>

        <!-- Tombol Detail -->
        <Button
            android:id="@+id/btnDetailPresensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Kerja Keseluruhan"
            android:layout_gravity="right"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/inter" />
    </LinearLayout>

    <!-- Calendar -->
    <LinearLayout
        android:id="@+id/calendarSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_menu"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/jadwalKerja"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Calendar Icon"
                android:src="@drawable/ic_calendar_month_24" />

            <TextView
                android:id="@+id/tvSelectMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:gravity="start"
                android:text="Select a date"
                android:textColor="@color/darker_grey"
                android:textSize="14sp" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:background="null"
                android:contentDescription="Arrow Icon"
                android:src="@drawable/ic_arrow_down" />
        </LinearLayout>
    </LinearLayout>

    <!-- RecyclerView untuk Rekap Absensi -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRekapAbsensi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:nestedScrollingEnabled="true"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calendarSection" />

    <!-- Navigasi Bawah -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:background="@drawable/bg_bottom_navbar"
        app:menu="@menu/bottom_navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
