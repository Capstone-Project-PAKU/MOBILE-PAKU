<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lingkaran Hijau di Bawah -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#A8FFC3"/> <!-- Warna hijau pastel -->
            <size android:width="500dp" android:height="250dp"/>
        </shape>
    </item>

    <!-- Lingkaran Merah Muda di Tengah -->
    <item android:top="30dp">
        <shape android:shape="oval">
            <solid android:color="#FF8080"/> <!-- Warna merah muda -->
            <size android:width="600dp" android:height="300dp"/>
        </shape>
    </item>

    <!-- Lingkaran Merah di Atas -->
    <item android:top="-20dp">
        <shape android:shape="oval">
            <solid android:color="#FF6464"/> <!-- Warna merah lebih gelap -->
            <size android:width="700dp" android:height="350dp"/>
        </shape>
    </item>

</layer-list>
